{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "lib": ["es5","es6", "dom"],
      "sourceMap": true,
      "outDir": "./lib",
      "rootDir": "./src",
      "declaration": true,
      "strict": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "noImplicitThis": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noFallthroughCasesInSwitch": true,
      "baseUrl": "./",
      "esModuleInterop": true,
      "paths": {
        "*": [
          "node_modules/@types/*"
        ]
      },
    },
    "include": [
      "src/**/*.ts",
      "typings/**/*.ts",
    ],
    "exclude": [
      "node_modules"
    ]
  }
  